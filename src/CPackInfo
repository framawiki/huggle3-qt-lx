#This is experimental installer file
set(CPACK_PACKAGE_DESCRIPTION_SUMMARY "Huggle")
set(CPACK_PACKAGE_VENDOR "Wikimedia")
set(CPACK_RESOURCE_FILE_LICENSE "${CMAKE_CURRENT_SOURCE_DIR}/Copyright.txt")
set(CPACK_PACKAGE_DESCRIPTION_FILE "${CMAKE_CURRENT_SOURCE_DIR}/build/summary")
set(CPACK_PACKAGE_ICON "${CMAKE_CURRENT_SOURCE_DIR}/Resources/huggle.ico")
set(CPACK_RESOURCE_FILE_README "${CMAKE_CURRENT_SOURCE_DIR}/build/summary")
set(CPACK_PACKAGE_VERSION_MAJOR "3")
set(CPACK_PACKAGE_VERSION_MINOR "1")
set(CPACK_PACKAGE_VERSION_PATCH "8")
if  ("${CMAKE_SYSTEM}" MATCHES "Linux")
    set(CPACK_DEBIAN_PACKAGE_MAINTAINER "Petr Bena (benapetr@gmail.com)")
    set(CPACK_GENERATOR "DEB")
endif()
